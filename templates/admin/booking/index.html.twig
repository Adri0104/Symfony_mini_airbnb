{% extends 'admin/base.html.twig' %}

{% block title %}Réservations{% endblock %}

{% block body %}
    <div class="container-fluid">
        <h1 class="my-5">Réservations</h1>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>id</th>
                    <th>Date</th>
                    <th>Visteur</th>
                    <th>Annonce</th>
                    <th>Durée</th>
                    <th>Prix</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
            {% for booking in bookings %}
                <tr>
                    <td>{{ booking.id }}</td>
                    <td>{{ booking.createdAt | date('d/m/Y H:i') }}</td>
                    <td><img src="{{ booking.booker.picture }}" alt="" class="avatar avatar-micro"> {{ booking.booker.fullName }}</td>
                    <td>{{ booking.ad.title }}</td>
                    <td>{{ booking.duration }}</td>
                    <td>{{ booking.amount }}</td>
                    <td>
                        <a href="{{ path('admin.booking.edit', {'id': booking.id}) }}" class="btn btn-primary">edit</a>
                        <a href="{{ path('admin.booking.delete', {'id': booking.id}) }}" class="btn btn-danger">delete</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
