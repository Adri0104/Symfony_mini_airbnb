{% extends 'base.html.twig' %}

{% form_theme form 'ad/_collection.html.twig' %}

{% block body %}
    <div class="container">
        <h1>Modifier l'annonce {{ ad.title }}</h1>
        {{ form_start(form) }}
        {{ form_widget(form) }}
        <p>
            <input type="submit" class="btn btn-primary" value="Modifier"> | <a href="{{ path('index.ads') }}">Cancel</a>
        </p>
        {{ form_end(form) }}
    </div>
{% endblock %}

{% block title %}
    Edition de l'annonce {{ ad.title }}
{% endblock %}

{% block javascripts %}
    <script src="{{ asset("js/ad.js") }}"></script>
{% endblock %}
