{% extends 'base.html.twig' %}

{% block title %}
    Création d'une annonce
{% endblock %}

{% block body %}
    <div class="container">
        <h1>Créer uune nouvelle annonce</h1>
        {{ form_start(form) }}
            <div class="form-group">
                {{ form_label(form.title) }}
                {{ form_widget(form.title) }}
            </div>
            <div class="form-group">
                {{ form_label(form.introduction) }}
                {{ form_widget(form.introduction) }}
            </div>
            <p>
                <input type="submit" class="btn btn-primary" value="Créer"> | <a href="{{ path('index.ads') }}">Cancel</a>
            </p>
        {{ form_end(form) }}
    </div>
{% endblock %}


